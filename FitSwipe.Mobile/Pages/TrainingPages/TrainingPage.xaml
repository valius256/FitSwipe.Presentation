<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FitSwipe.Mobile.Pages.TrainingPages.TrainingPage"
             xmlns:controls="clr-namespace:FitSwipe.Mobile.Controls">
    <Grid BackgroundColor="DarkCyan">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <!-- This will take only the required space -->
            <RowDefinition Height="*" />
            <!-- This will take the remaining space -->
        </Grid.RowDefinitions>
        <Label Grid.Row="0"
            Text="This is training page"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <controls:Navbar Grid.Row="1"  ActiveTab="3"></controls:Navbar>
    </Grid>
</ContentPage>