<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FitSwipe.Mobile.Pages.SubscriptionPages.SubscriptionView">
  <ScrollView>
    <StackLayout BackgroundColor="#323593">
      <AbsoluteLayout HorizontalOptions="FillAndExpand">
        <!-- Background Image -->
        <StackLayout AbsoluteLayout.LayoutBounds="0, 0, 1, AutoSize"
                     AbsoluteLayout.LayoutFlags="SizeProportional">
          <Image Source="subscription_background"
                 HorizontalOptions="FillAndExpand"
                 Opacity="0.7"
                 BackgroundColor="White" />
        </StackLayout>

        <!-- Back Button Positioned at the Top Left -->
        <StackLayout AbsoluteLayout.LayoutBounds="0, 0, AutoSize, AutoSize"
                     AbsoluteLayout.LayoutFlags="PositionProportional"
                     Padding="20">
          <ImageButton Source="back_icon_white"
                       WidthRequest="30"
                       HeightRequest="30"
                       HorizontalOptions="StartAndExpand" />
        </StackLayout>

        <StackLayout AbsoluteLayout.LayoutBounds="0.5, 1.7, 1, AutoSize"
                     AbsoluteLayout.LayoutFlags="PositionProportional"
                     Padding="0, 20, 0 ,0">
          <Image Source="crown"
                 WidthRequest="180" />
        </StackLayout>
      </AbsoluteLayout>

      <!-- Decorative Button -->
      <StackLayout Padding="0, 20, 0, 0">
        <Button Text="ADS"
                FontSize="Medium"
                FontAttributes="Bold"
                TextColor="#323593"
                BackgroundColor="#F8C600"
                Padding="0"
                WidthRequest="90"
                HeightRequest="30" />
      </StackLayout>

      <!--#region VIP PACKAGE INFORMATION -->
      <StackLayout Padding="0, 15, 0, 0">
        <Label Text="Mua gói quảng cáo"
               TextColor="White"
               FontSize="Large"
               FontAttributes="Bold"
               HorizontalTextAlignment="Center" />

        <StackLayout Orientation="Horizontal"
                     VerticalOptions="CenterAndExpand"
                     Spacing="10">
          <BoxView Color="Yellow"
                   HeightRequest="1"
                   HorizontalOptions="FillAndExpand" />

          <Image Source="star_color"
                 HeightRequest="12"
                 WidthRequest="12" />

          <Label Text="Nhận ưu đãi"
                 TextColor="White" />

          <Image Source="star_color"
                 HeightRequest="12"
                 WidthRequest="12" />

          <BoxView Color="Yellow"
                   HeightRequest="1"
                   HorizontalOptions="FillAndExpand" />
        </StackLayout>

        <AbsoluteLayout HorizontalOptions="CenterAndExpand"
                        Padding="0, 20, 0, 0">
          <Label Text="Gói của bạn"
                 FontSize="Body"
                 TextColor="White"
                 AbsoluteLayout.LayoutFlags="PositionProportional"
                 AbsoluteLayout.LayoutBounds="0.25, 0.1, AutoSize, AutoSize" />

          <Label Text="Standard"
                 ZIndex="1"
                 TextColor="#323593"
                 FontAttributes="Bold"
                 FontSize="Title"
                 AbsoluteLayout.LayoutFlags="PositionProportional"
                 AbsoluteLayout.LayoutBounds="0.25, 0.6, AutoSize, AutoSize" />

          <StackLayout>
            <Image Source="dumbell_white_img"
                   WidthRequest="350"
                   HeightRequest="120"
                   Aspect="Fill" />
          </StackLayout>

          <Label AbsoluteLayout.LayoutFlags="PositionProportional"
                 AbsoluteLayout.LayoutBounds="0.4, 1.05, AutoSize, AutoSize">
            <Label.FormattedText>
              <FormattedString>
                <Span Text="Thời gian còn lại: "
                      TextColor="White"
                      FontSize="Default" />
                <Span Text="5d 22h 15m"
                      FontAttributes="Bold"
                      TextColor="White"
                      FontSize="Default" />
              </FormattedString>
            </Label.FormattedText>
          </Label>
        </AbsoluteLayout>

        <AbsoluteLayout ZIndex="-1">
          <Border AbsoluteLayout.LayoutFlags="PositionProportional"
                  AbsoluteLayout.LayoutBounds="0.5, 2.5, AutoSize, AutoSize"
                  WidthRequest="285"
                  HorizontalOptions="CenterAndExpand"
                  BackgroundColor="Transparent"
                  StrokeThickness="2">
            <Border.StrokeShape>
              <RoundRectangle CornerRadius="10" />
            </Border.StrokeShape>

            <StackLayout Padding="15">
              <StackLayout Orientation="Horizontal"
                           Spacing="10"
                           Margin="0, 0, 0, 10">
                <Image Source="star_color"
                       WidthRequest="15" />
                <Label Text="Bạn sẽ được"
                       TextColor="White"
                       FontAttributes="Bold"
                       FontSize="Subtitle" />
              </StackLayout>

              <Grid Padding="20, 0, 0, 0"
                    RowSpacing="15">
                <Grid.ColumnDefinitions>
                  <ColumnDefinition Width="20" />
                  <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                  <RowDefinition />
                  <RowDefinition />
                </Grid.RowDefinitions>

                <Label Grid.Column="0"
                       Grid.Row="0"
                       FontAttributes="Bold"
                       TextColor="White"
                       Text="&#x2022;" />
                <Label Grid.Column="1"
                       Grid.Row="0"
                       TextColor="White"
                       Text="Tăng khả năng tiếp cận học viên" />

                <Label Grid.Column="0"
                       Grid.Row="1"
                       FontAttributes="Bold"
                       TextColor="White"
                       Text="&#x2022;" />
                <Label Grid.Column="1"
                       Grid.Row="1"
                       TextColor="White"
                       Text="Đăng ảnh video, không giới hạn" />
              </Grid>
            </StackLayout>
          </Border>
        </AbsoluteLayout>
      </StackLayout>
      <!--#endregion-->

      <!--#region SUBSCRIPTION PACKAGES -->
      <StackLayout Padding="30">
        <StackLayout Orientation="Horizontal"
                     VerticalOptions="CenterAndExpand"
                     Spacing="10">
          <BoxView Color="White"
                   HeightRequest="1"
                   HorizontalOptions="FillAndExpand" />

          <Label Text="Mua thêm?"
                 TextColor="White" />

          <BoxView Color="White"
                   HeightRequest="1"
                   HorizontalOptions="FillAndExpand" />
        </StackLayout>

        <StackLayout>
          <AbsoluteLayout>
            <Border Stroke="White"
                    WidthRequest="200">
              <Border.StrokeShape>
                <RoundRectangle CornerRadius="10" />
              </Border.StrokeShape>

              <StackLayout>
                <Label Text="Standard"
                       Padding="25, 10"
                       TextColor="White"
                       FontAttributes="Bold"
                       FontSize="Medium"
                       HorizontalTextAlignment="Center" />

                <BoxView HeightRequest="1"
                         HorizontalOptions="FillAndExpand"
                         Color="White" />

                <StackLayout Padding="10">
                  <Label Text="Bạn sẽ được"
                         TextColor="White"
                         FontAttributes="Bold"
                         Margin="0, 0, 0, 15" />

                  <Grid RowSpacing="15">
                    <Grid.ColumnDefinitions>
                      <ColumnDefinition Width="20" />
                      <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                      <RowDefinition />
                      <RowDefinition />
                      <RowDefinition />
                    </Grid.RowDefinitions>

                    <Label Grid.Column="0"
                           Grid.Row="0"
                           FontAttributes="Bold"
                           TextColor="White"
                           Text="&#x2022;" />
                    <Label Grid.Column="1"
                           Grid.Row="0"
                           TextColor="White"
                           Text="Tăng khả năng tiếp cận học viên" />

                    <Label Grid.Column="0"
                           Grid.Row="1"
                           FontAttributes="Bold"
                           TextColor="White"
                           Text="&#x2022;" />
                    <Label Grid.Column="1"
                           Grid.Row="1"
                           TextColor="White"
                           Text="Khung ảnh đại diện nổi bật" />

                    <Label Grid.Column="0"
                           Grid.Row="2"
                           FontAttributes="Bold"
                           TextColor="White"
                           Text="&#x2022;" />
                    <Label Grid.Column="1"
                           Grid.Row="2"
                           TextColor="White"
                           Text="Khung ảnh đại diện nổi bật" />
                  </Grid>
                </StackLayout>
              </StackLayout>
            </Border>
          </AbsoluteLayout>
        </StackLayout>
      </StackLayout>
      <!--#endregion-->
    </StackLayout>
  </ScrollView>
</ContentPage>
